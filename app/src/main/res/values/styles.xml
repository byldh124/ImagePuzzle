<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTheme">
        <item name="android:windowBackground">@color/dialog</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/cafe24</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRed01" parent="Button">
        <item name="android:background">@drawable/bg_button_red_01</item>
    </style>

    <style name="ButtonGray01" parent="Button">
        <item name="android:background">@drawable/bg_button_gray_01</item>
    </style>
</resources>